extends ui_layout

block content
  .sixteen.wide.column 
    table.ui.celled.padded.table
      thead
        tr
          th.single.line E-mail
          th MTurkID
          th Start Date
          th Group
          th Completed?
          th Day 1: # of times viewed feed
          th Day 2: # of times viewed feed
          th Number of Logins
          th Posts
          th Replies
      each u in users
        tbody
          tr
            td=u.email
            td.single.line=u.mturkID
            td=u.createdAt
            td=u.group
            td=u.completed
            td=u.study_days[0]
            td=u.study_days[1]
            td=u.log.length 
            td=u.numPosts + 1
            td=u.numComments + 1