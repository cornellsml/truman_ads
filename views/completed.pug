extends ui_layout

block content
  .sixteen.wide.column 
    table.ui.celled.padded.table
      thead
        tr
          th.single.line E-mail
          th Prolific ID
          th Start Date
          th # Ads/10
          th Completed?
          th Approximate total time on site
          th # of Posts
          th # of Comments
      each u in users
        tbody
          tr
            td=u.email
            td.single.line=u.mturkID
            td=u.createdAt.toString().replace("GMT-0400 (Eastern Daylight Time)","ET")
            td=u.group=="var1" ? 5 :u.group=="var2" ? 4 : 2
            td=u.completed
            td=Math.round((u.pageTimes[0] + u.pageTimes[1])/1000/60)+" minutes"
            td=u.numPosts + 1
            td=u.numComments + 1